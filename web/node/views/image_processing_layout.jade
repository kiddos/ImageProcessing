html
  head
    title= title
    link(rel="stylesheet", href="/lib/codemirror.css")
    link(rel="stylesheet", href="/stylesheets/image_processing.css")
    link(rel="shortcut icon", type="image/ico", href="/app.ico")
    script(src="/jquery.min.js")
